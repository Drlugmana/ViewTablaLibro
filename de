function formatDateTimeDMY(date) {
  if (!date) return "-";
  const d = new Date(date);

  const fecha = d.toLocaleDateString("es-EC", {
    day: "2-digit",
    month: "2-digit",
    year: "numeric",
  });

  // ðŸ”¥ Hora con AM/PM (igual como lo veÃ­as antes)
  const hora = d.toLocaleTimeString("en-US", {
    hour: "2-digit",
    minute: "2-digit",
    second: "2-digit",
    hour12: true,
  });

  return `${fecha}, ${hora}`;
}

<strong>Inicio:</strong> {formatDateTimeDMY(start)}

